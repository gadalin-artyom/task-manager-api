# syntax=docker/dockerfile:1
FROM python:3.11-slim

# Устанавливаем зависимости для psycopg
RUN apt-get update && apt-get install -y gcc libpq-dev build-essential && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Копируем только файлы зависимостей сначала для кеширования
COPY pyproject.toml poetry.lock* /app/

# Устанавливаем Poetry
RUN pip install --no-cache-dir "poetry>=1.5.1"

# Устанавливаем зависимости без виртуалки (используем системный Python)
RUN poetry config virtualenvs.create false \
 && poetry install --no-root --only main

# Копируем весь проект
COPY . /app

# Экспорт переменных окружения
ENV PYTHONPATH=/app

# Запуск приложения
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
